        <Image x:Name="tyan_tab" HorizontalAlignment="Left" Height="524" Width="450" Source="" VerticalAlignment="Top" Visibility="Visible"/>
        

        <Image x:Name="dialog_img" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="450" Source="Resources/dialog_frame.png" Margin="0,430,0,0" />
        <Label x:Name="girlnamebox" Content="Саманта" HorizontalAlignment="Left" Margin="10,430,0,0" VerticalAlignment="Top" Width="134" Height="35" FontSize="20"  FontFamily="Corbel" Foreground="#FF161ECF" Background="#00000000" />
