        <Button x:Name="namebutton" HorizontalAlignment="Left" Margin="132,281,0,0" VerticalAlignment="Top" Width="165" Height="85"  FontSize="36" Content="OK" Click="Button_Click" Visibility="Hidden"/>
        <Label x:Name="clock" Content="00:00" HorizontalAlignment="Left" Margin="166,242,0,0" VerticalAlignment="Top" Height="66" Width="103" FontSize="32" FontFamily="Adobe Gothic Std B" Foreground="#FFF3EAEA"/>
