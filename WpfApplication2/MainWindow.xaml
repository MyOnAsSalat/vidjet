    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Topmost="false"
    Title="Виджет" Height="525" Width="450" AllowsTransparency="True" WindowStyle="None"  Background="Transparent" WindowStartupLocation="Manual" Left = "1470" Top="515" FontFamily="Corbel" Icon="Resources/tray.png" ResizeMode="NoResize" Visibility="Visible" >
