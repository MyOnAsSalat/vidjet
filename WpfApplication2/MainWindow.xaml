        <Label x:Name="cpu" Content="100%" Margin="185,242,0,0" Height="88" Width="112" FontSize="36" FontFamily="Adobe Gothic Std B" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden" Foreground="#FFF3EAEA"/>
        <Label x:Name="memory" Content="100%" HorizontalAlignment="Left" Margin="185,242,0,0" VerticalAlignment="Top" Height="88" Width="122" FontSize="36" FontFamily="Adobe Gothic Std B" Visibility="Hidden" Foreground="#FFF3EAEA"/>
        <Button x:Name="memorybutton" Content="M" HorizontalAlignment="Left" Margin="200,328,0,0" Width="34" Height="38" RenderTransformOrigin="0.526,-0.026" FontSize="24" VerticalAlignment="Top"/>
        <Button x:Name="help" Content="?" HorizontalAlignment="Left" Margin="268,328,0,0" Width="34" Height="38" RenderTransformOrigin="0.526,-0.026" FontSize="24" VerticalAlignment="Top"/>
        <Button x:Name="setting" Content="⚙" HorizontalAlignment="Left" Margin="234,328,0,0" Width="34" Height="38" RenderTransformOrigin="0.526,-0.026" FontSize="24" VerticalAlignment="Top"/>
        <Button x:Name="topframebutton" Content="Поверх всех окон" HorizontalAlignment="Left" Margin="324,0,0,0" VerticalAlignment="Top" Width="99" Height="27"/>
        <Button x:Name="endbutton" Content="X" HorizontalAlignment="Left" Margin="423,0,0,0" VerticalAlignment="Top" Width="27" Height="27" FontSize="16" BorderBrush="#FFEA1E1E">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="0"/>
                    <GradientStop Color="#FFEBEBEB" Offset="0.952"/>
                    <GradientStop Color="#FFDDDDDD"/>
                    <GradientStop Color="#FFFD0808" Offset="0.506"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>






    </Grid>

</Window>
